generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userCompanies UserCompany[]
  refreshTokens RefreshToken[]

  @@map("users")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  logo      String?
  industry  String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userCompanies     UserCompany[]
  incomes           Income[]
  expenses          Expense[]
  activities        Activity[]
  opportunities     Opportunity[]
  documents         Document[]
  contracts         Contract[]
  clients           Client[]
  quotes            Quote[]
  products          Product[]
  productCategories ProductCategory[]
  tickets           Ticket[]

  @@map("companies")
}

model UserCompany {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  companyId String   @map("company_id")
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([userId, companyId])
  @@map("user_companies")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model Income {
  id        String       @id @default(cuid())
  companyId String       @map("company_id")
  refNumber String       @map("ref_number")
  client    String
  concept   String
  method    String
  amount    Float
  margin    Float
  status    IncomeStatus @default(PENDING)
  date      DateTime
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("incomes")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  MANAGER
  USER
}

model Expense {
  id        String        @id @default(cuid())
  companyId String        @map("company_id")
  refNumber String?       @map("ref_number")
  provider  String
  concept   String
  category  String
  method    String
  amount    Float
  status    ExpenseStatus @default(PENDING)
  date      DateTime
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("expenses")
}

model Activity {
  id          String         @id @default(cuid())
  companyId   String         @map("company_id")
  type        ActivityType
  title       String
  description String?
  client      String?
  status      ActivityStatus @default(PENDING)
  priority    String?
  assignedTo  String?        @map("assigned_to")
  dueDate     DateTime       @map("due_date")
  completedAt DateTime?      @map("completed_at")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("activities")
}

model Opportunity {
  id         String           @id @default(cuid())
  companyId  String           @map("company_id")
  title      String
  client     String
  value      Float
  stage      OpportunityStage @default(PROSPECTO)
  status     String           @default("Pendiente")
  assignedTo String?          @map("assigned_to")
  closeDate  DateTime?        @map("close_date")
  createdAt  DateTime         @default(now()) @map("created_at")
  updatedAt  DateTime         @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("opportunities")
}

model Document {
  id         String       @id @default(cuid())
  companyId  String       @map("company_id")
  name       String
  type       DocumentType
  concept    String
  category   String?
  fileUrl    String       @map("file_url")
  fileSize   Int          @map("file_size")
  uploadedBy String       @map("uploaded_by")
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("documents")
}

model Contract {
  id         String         @id @default(cuid())
  companyId  String         @map("company_id")
  contractId String         @map("contract_id")
  name       String
  concept    String
  category   String?
  party      String
  startDate  DateTime       @map("start_date")
  endDate    DateTime       @map("end_date")
  status     ContractStatus @default(ACTIVE)
  fileUrl    String?        @map("file_url")
  uploadedBy String         @map("uploaded_by")
  createdAt  DateTime       @default(now()) @map("created_at")
  updatedAt  DateTime       @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("contracts")
}

enum IncomeStatus {
  PAID
  PENDING
  CANCELLED
  ERROR
}

enum ExpenseStatus {
  PAID
  PENDING
  CANCELLED
}

enum ActivityType {
  CALL
  MEETING
  QUOTE
  OTHER
}

enum ActivityStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum OpportunityStage {
  PROSPECTO
  PROPUESTA
  NEGOCIACION
  CALIFICADO
}

enum DocumentType {
  DOC
  PDF
  XLSX
  PNG
  OTHER
}

enum ContractStatus {
  ACTIVE
  EXPIRING_SOON
  EXPIRED
}

// ============================================
// SPRINT 3 - CLIENTES, INVENTARIO, TICKETS
// ============================================

model Client {
  id          String       @id @default(cuid())
  companyId   String       @map("company_id")
  name        String
  email       String?
  phone       String?
  address     String?
  city        String?
  country     String?
  ruc         String?
  cedula      String?
  taxId       String?      @map("tax_id")
  status      ClientStatus @default(PROSPECTO)
  contactName String?      @map("contact_name")
  notes       String?
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  company Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  quotes  Quote[]
  tickets Ticket[]

  @@index([companyId])
  @@index([status])
  @@map("clients")
}

model Quote {
  id            String        @id @default(cuid())
  quoteNumber   String        @unique @map("quote_number")
  companyId     String        @map("company_id")
  clientId      String        @map("client_id")
  status        QuoteStatus   @default(DRAFT)
  currency      String        @default("USD")
  subtotal      Float
  discount      Float         @default(0)
  tax           Float         @default(0)
  total         Float
  paymentMethod PaymentMethod @default(CONTADO) @map("payment_method")
  taxApplies    Boolean       @default(true) @map("tax_applies")
  validUntil    DateTime      @map("valid_until")
  notes         String?
  internalNotes String?       @map("internal_notes")
  terms         String?
  createdBy     String        @map("created_by")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  company Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  client  Client      @relation(fields: [clientId], references: [id], onDelete: Cascade)
  items   QuoteItem[]

  @@index([companyId])
  @@index([clientId])
  @@index([status])
  @@map("quotes")
}

model QuoteItem {
  id          String   @id @default(cuid())
  quoteId     String   @map("quote_id")
  productId   String?  @map("product_id")
  description String
  quantity    Int
  unitPrice   Float    @map("unit_price")
  discount    Float    @default(0)
  tax         Float    @default(0)
  total       Float
  createdAt   DateTime @default(now()) @map("created_at")

  quote   Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  product Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([quoteId])
  @@map("quote_items")
}

model Product {
  id          String   @id @default(cuid())
  companyId   String   @map("company_id")
  categoryId  String?  @map("category_id")
  name        String
  sku         String
  description String?
  unit        String   @default("UNI")
  stock       Int      @default(0)
  minStock    Int      @default(0) @map("min_stock")
  cost        Float    @default(0)
  price       Float
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  company    Company          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  category   ProductCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  quoteItems QuoteItem[]

  @@unique([companyId, sku])
  @@index([companyId])
  @@index([categoryId])
  @@map("products")
}

model ProductCategory {
  id          String   @id @default(cuid())
  companyId   String   @map("company_id")
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  company  Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  products Product[]

  @@unique([companyId, name])
  @@index([companyId])
  @@map("product_categories")
}

model Ticket {
  id          String         @id @default(cuid())
  companyId   String         @map("company_id")
  clientId    String?        @map("client_id")
  title       String
  description String?
  status      TicketStatus   @default(PROCESO1)
  priority    TicketPriority @default(MEDIUM)
  assignedTo  String?        @map("assigned_to")
  amount      Float?
  dueDate     DateTime?      @map("due_date")
  closedAt    DateTime?      @map("closed_at")
  createdBy   String         @map("created_by")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  client  Client? @relation(fields: [clientId], references: [id], onDelete: SetNull)

  @@index([companyId])
  @@index([status])
  @@index([assignedTo])
  @@map("tickets")
}

enum ClientStatus {
  PROSPECTO
  PROPUESTA
  NEGOCIACION
  CALIFICADO
  ACTIVO
  INACTIVO
}

enum QuoteStatus {
  DRAFT
  SENT
  APPROVED
  REJECTED
  EXPIRED
}

enum TicketStatus {
  PROCESO1
  PROCESO2
  PROCESO3
  PROCESO4
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum PaymentMethod {
  CONTADO
  CREDITO
}
